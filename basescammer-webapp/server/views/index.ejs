<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>BaseScammer Web App</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>BaseScammer Token List</h1>
    <table>
      <thead>
        <tr>
          <th>Status</th>
          <th>Symbol</th>
          <th>Name</th>
          <th>Contract Address</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% tokens.forEach(function(token) { %>
          <tr>
            <td>
              <% if (token.status === 'Green') { %>
                <span class="status-icon green-checkmark">&#10004;</span>
              <% } else if (token.status === 'Red') { %>
                <span class="status-icon red-x">&#10060;</span>
              <% } else { %>
                <span class="status-icon yellow-question">&#10067;</span>
              <% } %>
            </td>
            <td><%= token.symbol %></td>
            <td><%= token.name %></td>
            <td><%= token.contractAddress %></td>
            <td><%= token.score !== null ? token.score : 'N/A' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="pagination">
      <% if (page > 1) { %>
        <a href="/?page=<%= page - 1 %>&perPage=<%= perPage %>">Previous</a>
      <% } %>
      <span>Page <%= page %></span>
      <a href="/?page=<%= page + 1 %>&perPage=<%= perPage %>">Next</a>
    </div>
  </div>
</body>
</html>
